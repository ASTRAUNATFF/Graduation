@model Kindergarten_school.Models.Fee

<div class="container mt-4">
    <h2 class="text-center text-danger fw-bold">⚠️ Xóa Học Phí</h2>

    <div class="alert alert-warning text-center fw-bold">
        Bạn có chắc chắn muốn xóa khoản học phí này không? Hành động này không thể hoàn tác!
    </div>

    <div class="card p-4 shadow-lg border-danger">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Mã Học Phí</th>
                    <td>@Model.FeeID</td>
                </tr>
                <tr>
                    <th>Mã Học Sinh</th>
                    <td>@Model.StudentId</td>
                </tr>
                <tr>
                    <th>Loại Học Phí</th>
                    <td>@(Model.FeeTypes ?? "Không có")</td>
                </tr>
                <tr>
                    <th>Số Tiền</th>
                    <td>@Model.Amount VND</td>
                </tr>
                <tr>
                    <th>Số Ngày Đi Học</th>
                    <td>@Model.DaysAttended ngày</td>
                </tr>
                <tr>
                    <th>Trạng Thái</th>
                    <td>@(Model.Status ?? "Chưa xác định")</td>
                </tr>
                <tr>
                    <th>Hạn Thanh Toán</th>
                    <td>@Model.DueDate.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>Ngày Cập Nhật</th>
                    <td>@Model.LastUpdated.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
                <tr>
                    <th>Mã Điểm Danh</th>
                    <td>@Model.AttendanceId</td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="text-center mt-3">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">🗑 Xác Nhận Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">🔙 Quay Lại</a>
    </form>
</div>
