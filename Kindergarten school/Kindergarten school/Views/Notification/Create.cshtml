@model Kindergarten_school.Models.NotificationModel

<div class="card shadow p-4 rounded mb-4">
    <h2 class="fw-bold text-danger-emphasis mb-3">
        📝 Thêm thông báo mới
    </h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold">📌 Tiêu đề</label>
            <input asp-for="Title" class="form-control rounded-3 shadow-sm" placeholder="Nhập tiêu đề thông báo" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Message" class="form-label fw-semibold">✉️ Nội dung</label>
            <textarea asp-for="Message" class="form-control rounded-3 shadow-sm" rows="4" placeholder="Nhập nội dung chi tiết..."></textarea>
            <span asp-validation-for="Message" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn text-white px-4 py-2 fw-bold" style="background: linear-gradient(90deg, #4facfe, #00f2fe);">
                💾 Lưu
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-bold">
                ❌ Hủy
            </a>
        </div>
    </form>
</div>
