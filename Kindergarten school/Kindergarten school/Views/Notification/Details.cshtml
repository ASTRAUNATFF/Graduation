@model Kindergarten_school.Models.NotificationModel

<div class="card shadow p-4 rounded mb-4 border-start border-4 border-primary">
    <h2 class="fw-bold text-primary mb-3">
        📄 Chi tiết thông báo
    </h2>

    <div class="bg-light rounded p-3 mb-3 border">
        <h5 class="fw-bold text-dark">📌 @Model.Title</h5>
        <p>✉️ @Model.Message</p>
        <p><strong>🕒 Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
    </div>

    <a asp-action="Index" class="btn btn-outline-primary fw-bold px-4 py-2">
        🔙 Quay lại
    </a>
</div>
