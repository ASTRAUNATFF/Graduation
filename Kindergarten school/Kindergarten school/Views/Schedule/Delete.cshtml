@model Kindergarten_school.Models.ScheduleModel

@{
    ViewData["Title"] = "Xóa lịch học";
}

<h2>Xóa lịch học</h2>
<p>Bạn có chắc chắn muốn xóa lịch học sau không?</p>

<ul>
    <li><strong>Thời gian:</strong> @Model.TimeSlot</li>
    <li><strong>Hoạt động:</strong> @Model.Activity</li>
    <li><strong>Giáo viên:</strong> @Model.TeacherName</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
