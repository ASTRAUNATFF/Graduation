@model Kindergarten_school.Models.ScheduleCreateModel

@{
    var teacherList = ViewBag.Teachers as List<SelectListItem>;
    
}

<h2 class="text-primary text-center">Thêm Lịch Học Mới</h2>

<div class="container">
    <form asp-action="Create" method="post" class="card p-4 shadow">

        <!-- Ngày trong tuần -->
        <div class="mb-3">
            <label asp-for="DayOfWeek" class="form-label">Chọn Thứ:</label>
            <select asp-for="DayOfWeek" class="form-control">
                <option value="">-- Chọn Thứ --</option>
                <option value="1">Thứ 2</option>
                <option value="2">Thứ 3</option>
                <option value="3">Thứ 4</option>
                <option value="4">Thứ 5</option>
                <option value="5">Thứ 6</option>
            </select>
            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
        </div>

        <!-- Khung giờ -->
        <div class="mb-3">
            <label asp-for="TimeSlot" class="form-label">Chọn Khung Giờ:</label>
            <select asp-for="TimeSlot" class="form-control">
                <option value="">-- Chọn Khung Giờ --</option>
                @foreach (var timeSlot in ViewBag.TimeSlots)
                {
                    <option value="@timeSlot.Value">@timeSlot.Text</option>
                }
            </select>
            <span asp-validation-for="TimeSlot" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Activity" class="form-label">Chọn Hoạt Động:</label>
            <select asp-for="Activity" class="form-control">
                <option value="">-- Chọn Hoạt Động --</option>
                @foreach (var activity in ViewBag.Activities)
                {
                    <option value="@activity.Text">@activity.Text</option>
                }
            </select>
            <span asp-validation-for="Activity" class="text-danger"></span>
        </div>

        <!-- Giáo viên -->
        <div class="mb-3">
            <label asp-for="TeacherSelection" class="form-label">Chọn Giáo Viên:</label>
            <select asp-for="TeacherSelection" class="form-control">
                <option value="">-- Chọn giáo viên --</option>
                @if (teacherList != null)
                {
                    foreach (var teacher in teacherList)
                    {
                        <option value="@teacher.Value">@teacher.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="TeacherSelection" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Lưu Lịch Học</button>
            <a asp-action="AdminDashboard" asp-controller="Admin" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
