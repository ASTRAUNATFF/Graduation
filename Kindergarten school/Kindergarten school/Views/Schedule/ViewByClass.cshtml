@model List<ScheduleModel>

<h3 class="fw-bold mb-4">🗓 Thời Khóa Biểu - Lớp @ViewBag.ClassId</h3>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Thứ</th>
            <th>Khung giờ</th>
            <th>Hoạt động</th>
            <th>Giáo viên</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.DayOfWeek</td>
                <td>@ViewBag.TimeSlots[s.TimeSlot]</td>
                <td>@ViewBag.Activities[s.Activity]</td>
                <td>@s.TeacherName</td>
                <td>
                    <a href="@Url.Action("Edit", "Schedule", new { id = s.Id })" class="text-warning me-2"><i class="bi bi-pencil-square"></i></a>
                    <a href="@Url.Action("Delete", "Schedule", new { id = s.Id })" class="text-danger"><i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
        <tbody>
                @foreach (var item in Model)
                {
                <tr class="text-center align-middle">
                    <td>@item.ClassName</td>
                    <td>@item.TimeSlot</td>
                    <td>@item.Activity</td>
                    <td>@item.ClassId</td>
                    <td>@s.TeacherName</td>
                    <td>
                        <a href="/Admin/ClassDetails/@item.ClassId" class="btn-action text-primary"><i class="fas fa-eye"></i></a>
                        <a href="/Admin/ClassEdit/@item.Id" class="btn-action text-warning"><i class="fas fa-edit"></i></a>
                        <a href="/Admin/ClassDelete/@item.Id" class="btn-action text-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
        </tbody>
        }
    </tbody>
</table>
