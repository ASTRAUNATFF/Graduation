@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BACH MAI Hospital</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .main-content {
            padding: 20px;
            min-height: 100vh;
            background-color: #ffffff;
            display: flex;
        }

        .sidebar {
            background-color: #343a40;
            width: 250px;
            padding-top: 20px;
            flex-shrink: 0;
            height: auto;
        }

            .sidebar .nav-link {
                color: white;
                font-size: 1.2rem;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    transform: translateX(5px);
                    color: #00aced;
                }

        .content-area {
            flex-grow: 1;
            padding-left: 20px;
        }

        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }

        .footer {
            width: 100%;
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px 0;
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: 'Chào Quản trị viên!',
                text: 'Chúc bạn một ngày tốt lành!',
                icon: 'info',
                confirmButtonText: 'Đóng'
            });
        });
    </script>

    <!-- Main content -->
    <div class="main-content">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="d-flex justify-content-center mb-4">
                <img src="~/images/BV.png" alt="Logo" class="img-fluid" style="width: 100px;">
            </div>
            <a class="nav-link d-flex align-items-center text-light py-2" asp-controller="Admin" asp-action="DashBoard">
                <i class="bi bi-bar-chart mr-2"></i> Giáo Viên
            </a>
            <a class="nav-link d-flex align-items-center text-light py-2" asp-controller="Patients" asp-action="Index">
                <i class="bi bi-person-check mr-2"></i> Quản lý hồ sơ Học Sinh
            </a>
            <a class="nav-link d-flex align-items-center text-light py-2" asp-controller="Admin" asp-action="StaffList">
                <i class="bi bi-people mr-2"></i> Quản lý nhân viên
            </a>
            <a class="nav-link d-flex align-items-center text-light py-2" asp-controller="Admin" asp-action="Total">
                <i class="bi bi-clipboard-data mr-2"></i> Phụ Huynh
            </a>
        </div>

        <!-- Content area -->
        <div class="content-area">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Quản Trị Viên</a>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-light">Chào <strong>@User.Identity.Name</strong></span>
                                </li>
                                <li class="nav-item">
                                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-link nav-link text-danger">Đăng xuất</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <form asp-action="Login" asp-controller="Account" method="get" class="d-inline">
                                        <button type="submit" class="btn btn-success">Đăng Nhập</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Dashboard content -->
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-3">
                        <div class="card text-center shadow-lg mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Danh sách học sinh</h5>
                                <p class="card-text">Quản lý</p>
                                <a href="/Admin/StaffList" class="btn btn-secondary">Xem <span>(28963)</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer class="footer">
                <p>Bản quyền © 2024 T&T KindergardenSchool. <a href="#">Chính sách bảo mật</a></p>
            </footer>
        </div>
    </div>
</body>
</html>
