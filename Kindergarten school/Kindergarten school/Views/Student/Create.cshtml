@model Kindergarten_school.Models.StudentModel

@{
    ViewData["Title"] = "Thêm học sinh";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StudentID" class="control-label">Mã học sinh</label>
        <input asp-for="StudentID" class="form-control" />
        <span asp-validation-for="StudentID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Họ</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Tên</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label">Tuổi</label>
        <input asp-for="Age" type="number" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label">Ngày sinh</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Giới tính</label>
        <select asp-for="Gender" class="form-control">
            <option value="">Chọn giới tính</option>
            <option value="Male">Nam</option>
            <option value="Female">Nữ</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentID" class="control-label">Mã phụ huynh</label>
        <input asp-for="ParentID" class="form-control" />
        <span asp-validation-for="ParentID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeacherID" class="control-label">Mã giáo viên</label>
        <input asp-for="TeacherID" class="form-control" />
        <span asp-validation-for="TeacherID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentContact" class="control-label">Liên hệ phụ huynh</label>
        <input asp-for="ParentContact" class="form-control" />
        <span asp-validation-for="ParentContact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClassId" class="control-label">Lớp</label>
        <input asp-for="ClassId" class="form-control" />
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentDate" class="control-label">Ngày nhập học</label>
        <input asp-for="EnrollmentDate" type="date" class="form-control" />
        <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HealthStatus" class="control-label">Tình trạng sức khỏe</label>
        <textarea asp-for="HealthStatus" class="form-control"></textarea>
        <span asp-validation-for="HealthStatus" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
