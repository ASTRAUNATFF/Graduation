@model Kindergarten_school.Models.ClassModel

<h2>Chỉnh sửa thông tin lớp</h2>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="ClassName">Tên lớp</label>
        <input asp-for="ClassName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="MaxStudent">Số học sinh tối đa</label>
        <input asp-for="MaxStudent" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Schedule">Thời khóa biểu</label>
        <input asp-for="Schedule" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
</form>