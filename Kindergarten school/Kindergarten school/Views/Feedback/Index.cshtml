@model List<Kindergarten_school.Models.FeedbackModel>

@{
    ViewData["Title"] = "Danh sách góp ý";
}

<h2>Danh sách Góp Ý</h2>
<a href="@Url.Action("Create", "Feedback")" class="btn btn-primary">Thêm Góp Ý</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>STT</th>
            <th>Số Điện Thoại</th>
            <th>Parent ID</th>
            <th>Nội dung</th>
            <th>Ngày tạo</th>
            <th>Hành động</th> <!-- Thêm cột hành động -->
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Phone</td>
                <td>@Model[i].ParentID</td>
                <td>@Model[i].Content</td>
                <td>@Model[i].CreateAt.ToString("dd/MM/yyyy HH:mm:ss")</td> <!-- Sửa tên thuộc tính & format -->
                <td>
                    <a href="@Url.Action("Edit", "Feedback", new { id = Model[i].Id })" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="@Url.Action("Delete", "Feedback", new { id = Model[i].Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
