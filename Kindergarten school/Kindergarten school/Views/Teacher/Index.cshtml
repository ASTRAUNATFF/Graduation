@model IEnumerable<Kindergarten_school.Models.TeacherModel>

<h2>Danh sách giáo viên</h2>

<table class="table">
    <thead>
        <tr>
            <th>Họ</th>
            <th>Tên</th>
            <th>Môn học</th>
            <th>Số điện thoại</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Subject</td>
                <td>@teacher.Phone</td>
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Thêm giáo viên mới</a>