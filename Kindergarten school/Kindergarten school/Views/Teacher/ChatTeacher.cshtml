@model List<Kindergarten_school.Models.Parent>
@using System.Security.Claims
@{
    ViewData["Title"] = "Chat với phụ huynh";
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
@section Styles {
    <link rel="stylesheet" href="~/css/chat.css">

}

<div class="container-fluid" id="chatParent">
    <input type="hidden" id="TeacherId" value="@userId" />

    <div class="user-list">
        @if (Model != null)
        {
            foreach (var parent in Model)
            {
                <div class="nav-user" data-parentId="@parent.AccountID">
                    <div class="nav-user-wrapper">
                        <img class="pfp-small" src="~/images/8065351.png">
                        <p>@parent.FirstName @parent.LastName</p>
                    </div>
                </div>
            }
        }

    </div>
    <div class="chatroom">
        <div class="message-channel" id="messageChannel">
        </div>
        <div class="text-input-wrapper" id="bottomSend" style="display: none">

            <textarea class="text-input" rows="3" placeholder="Say something..." id="messageInput"></textarea>
            <div id="sendMessage" style="cursor: pointer">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path d="M16.1 260.2c-22.6 12.9-20.5 47.3 3.6 57.3L160 376l0 103.3c0 18.1 14.6 32.7 32.7 32.7c9.7 0 18.9-4.3 25.1-11.8l62-74.3 123.9 51.6c18.9 7.9 40.8-4.5 43.9-24.7l64-416c1.9-12.1-3.4-24.3-13.5-31.2s-23.3-7.5-34-1.4l-448 256zm52.1 25.5L409.7 90.6 190.1 336l1.2 1L68.2 285.7zM403.3 425.4L236.7 355.9 450.8 116.6 403.3 425.4z" />
                </svg>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/teacher-js/chat.js"></script>
}