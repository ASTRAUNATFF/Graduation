@model Kindergarten_school.Models.ClassModel

<h2>Xóa lớp</h2>
<p>Bạn có chắc chắn muốn xóa lớp <strong>@Model.ClassName</strong> không?</p>
<form asp-action="ClassDeleteConfirmed" asp-controller="Admin" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="ClassDashboard" asp-controller="Admin" class="btn btn-secondary">Hủy</a>

</form>
