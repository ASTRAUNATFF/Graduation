@model IEnumerable<Kindergarten_school.Models.StudentModel>
@using System.Security.Claims

@{
    ViewData["Title"] = "Danh sách học sinh";
    var roleClaim = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role);
    var role = roleClaim?.Value ?? "";
}


<div class="container student-list-container">
    <h1 class="title">📚 Danh sách học sinh</h1>

    <br>
    <br>

    <div class="table-responsive">
        <table class="table student-table">
            <thead>
                <tr>
                    <th>👦 Họ</th>
                    <th>🧒 Tên</th>
                    <th>🎂 Tuổi</th>
                    <th>🏫 Lớp</th>
                    <th>📍 Địa chỉ</th>
                    <th>⚙️ Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Age</td>
                        <td>@student.ClassID</td>
                        <td>@student.Address</td>
                        <td>
                            <a class="btn btn-action btn-info" href="/admin/tuition-fees/@student.StudentID">
                                📄 Học phí
                            </a>
                            <a class="btn btn-action btn-info" asp-action="StudentDetails" asp-route-id="@student.Id">
                                📄 Chi tiết
                            </a>
                            <a class="btn btn-action btn-warning" asp-action="StudentEdit" asp-route-id="@student.Id">
                                ✏️ Sửa
                            </a>
                            <a class="btn btn-action btn-danger" asp-action="StudentDelete" asp-route-id="@student.Id">
                                🗑️ Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



</div>
<br>
<br>

<div class="btn-add-student-container">
    <a class="btn-add-student" asp-action="StudentCreate">➕ Thêm học sinh</a>
</div>

<div class="text-center mt-4">
    @if (role == "admin")
    {
        <a href="/Admin/AdminDashboard" class="btn btn-lg btn-home px-5 shadow-sm">
            <i class="fas fa-home me-2"></i>Trở về Home
        </a>
    }
    else if (role == "teacher")
    {
        <a href="/Admin/TeacherHomeLand" class="btn btn-lg btn-home px-5 shadow-sm">
            <i class="fas fa-home me-2"></i>Trở về Home
        </a>
    }
    else if (role == "parent")
    {
        <a href="/Home/Index" class="btn btn-lg btn-home px-5 shadow-sm">
            <i class="fas fa-home me-2"></i>Trở về Home
        </a>
    }
</div>


<style>
    /* Tổng thể */
    body {
        background-color: #f9f9f9;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        max-width: 900px;
        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề */
    .title {
        text-align: center;
        color: #ff6f61;
        font-size: 28px;
        margin-bottom: 20px;
    }

    /* Căn giữa nút Thêm học sinh */
    .btn-add-student-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-bottom: 20px; /* Tạo khoảng cách với các phần tử bên dưới */
    }


    /* Nút thêm học sinh */
    .btn-add-student {
        display: block;
        width: 50%;
        text-align: center;
        padding: 12px;
        font-size: 18px;
        background: linear-gradient(135deg, #ff9966, #ff5e62);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-add-student:hover {
            background: linear-gradient(135deg, #ff5e62, #ff9966);
            transform: scale(1.05);
        }

    /* Căn giữa nút Home */
    .btn-home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    /* Điều chỉnh nút Home */
    .btn-back-home {
        display: inline-block;
        padding: 12px 24px;
        font-size: 18px;
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
        text-align: center;
    }

        /* Hiệu ứng hover */
        .btn-back-home:hover {
            background: linear-gradient(135deg, #218838, #28a745);
            transform: scale(1.05);
        }

    /* Bảng */
    .student-table {
        width: 100%;
        border-radius: 10px;
        overflow: hidden;
    }

        .student-table th {
            background-color: #ff6f61;
            color: white;
            text-align: center;
            padding: 12px;
        }

        .student-table td {
            padding: 10px;
            text-align: center;
            font-size: 16px;
            color: #333;
        }

    /* Nút hành động */
    .btn-action {
        display: inline-block;
        padding: 8px 12px;
        font-size: 14px;
        color: white;
        border-radius: 6px;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-info {
        background-color: #3498db;
    }

    .btn-warning {
        background-color: #f1c40f;
    }

    .btn-danger {
        background-color: #e74c3c;
    }

    .btn-action:hover {
        transform: scale(1.1);
        opacity: 0.8;
    }

    /* Giới hạn chiều cao bảng và thêm thanh cuộn */
    .table-responsive {
        max-height: 350px; /* Điều chỉnh chiều cao theo ý muốn */
        overflow-y: auto;
    }

    /* Đảm bảo bảng hiển thị đẹp */
    .student-table {
        width: 100%;
        border-collapse: collapse;
    }

        /* Giữ đường kẻ giữa các hàng */
        .student-table th, .student-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

    .btn-home {
        background-color: #28a745;
        color: white;
        font-weight: bold;
        border-radius: 30px;
    }

        .btn-home:hover {
            background-color: #138496;
        }
</style>