@model Kindergarten_school.Models.ClassModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh Sửa Thông Tin Lớp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f4f6f9;
        }

        .container {
            margin-top: 50px;
            max-width: 600px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        }

        .title {
            font-weight: bold;
            font-size: 1.8rem;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-submit {
            width: 100%;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="title">✏️ Chỉnh Sửa Thông Tin Lớp</h2>
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label for="ClassName" class="form-label">Tên lớp</label>
                <input asp-for="ClassName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="MaxStudent" class="form-label">Số học sinh tối đa</label>
                <input asp-for="MaxStudent" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="Schedule" class="form-label">Thời khóa biểu</label>
                <input asp-for="Schedule" class="form-control" type="date" required />
            </div>
            <button type="submit" class="btn btn-success btn-lg btn-submit"><i class="fas fa-save"></i> Lưu thay đổi</button>
        </form>
    </div>
</body>
</html>