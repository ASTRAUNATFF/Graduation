@model Kindergarten_school.Models.TeacherModel

@{
    ViewData["Title"] = "Thêm giáo viên mới";
}

<div class="container py-5">
    <div class="card shadow-sm rounded-4 p-5">
        <div class="text-center mb-4">
            <h2 class="text-warning-emphasis fw-bold">
                <i class="bi bi-person-plus-fill"></i> Thêm giáo viên mới
            </h2>
        </div>

        <form asp-action="Create" method="post">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FirstName" class="form-control" placeholder="Họ" />
                        <label asp-for="FirstName">👨‍🏫 Họ</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="LastName" class="form-control" placeholder="Tên" />
                        <label asp-for="LastName">🧑‍🏫 Tên</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Subject" class="form-control" placeholder="Môn học" />
                        <label asp-for="Subject">📚 Môn học</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Phone" class="form-control" placeholder="Số điện thoại" />
                        <label asp-for="Phone">📞 Số điện thoại</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="HireDate" class="form-control" placeholder="Ngày vào làm" type="date" />
                        <label asp-for="HireDate">📅 Ngày vào làm</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Address" class="form-control" placeholder="Địa chỉ" />
                        <label asp-for="Address">📍 Địa chỉ</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="TeacherID" class="form-control" placeholder="Mã giáo viên" />
                        <label asp-for="TeacherID">🆔 Mã giáo viên</label>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-lg px-5 text-white" style="background: linear-gradient(to right, #FF7F50, #FF6347); border-radius: 50px;">
                    ➕ Thêm giáo viên
                </button>
            </div>
        </form>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
