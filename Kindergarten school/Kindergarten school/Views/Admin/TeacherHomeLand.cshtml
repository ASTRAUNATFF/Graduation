@using System.Security.Claims
@{
    ViewData["Title"] = "Trang chủ Giáo viên";
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<!-- Banner chào mừng -->
<div class="bg-primary text-white p-4 rounded mb-4 shadow d-flex justify-content-between align-items-center">
    <div>
        <h2 class="fw-bold">Chào mừng tới hệ thống giáo viên!</h2>
        <p>Trang làm việc nội bộ của giáo viên mầm non.</p>
    </div>
    <img src="~/images/Teachericon.png"
         alt="minh họa giáo viên"
         style="height: 100px; border-radius: 30px " />
</div>


<!-- Tên giáo viên 
<div class="mb-4">
    <h5>Xin chào, <strong>@User.Identity.Name</strong>!</h5>
</div>
-->

<!-- Quản lý - Nhập liệu -->
<h4 class="mb-3">Quản lý - Nhập liệu</h4>
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <a href="/Attendance" class="text-decoration-none">
            <div class="card card-hover text-center h-100 shadow-sm p-3">
                <i class="fas fa-user-graduate fa-2x text-primary mb-2"></i>
                <div class="fw-semibold">Điểm danh & kết quả</div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a href="/Notification" class="text-decoration-none">
            <div class="card card-hover text-center h-100 shadow-sm p-3">
                <i class="fas fa-bell fa-2x text-danger mb-2"></i>
                <div class="fw-semibold">Gửi thông báo</div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a href="/Tasks" class="text-decoration-none">
            <div class="card card-hover text-center h-100 shadow-sm p-3">
                <i class="fas fa-tasks fa-2x text-success mb-2"></i>
                <div class="fw-semibold">Giao nhiệm vụ</div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a href="/teacher/chat/@userId" class="text-decoration-none">
            <div class="card card-hover text-center h-100 shadow-sm p-3">
                <i class="fas fa-comments fa-2x text-warning mb-2"></i>
                <div class="fw-semibold">Trao đổi với phụ huynh</div>
            </div>
        </a>
    </div>
</div>

<!-- Thông tin chung -->
<h4 class="mb-3">Thông tin chung</h4>
<div class="row">
    <div class="col-md-3 mb-3">
        <a href="/Admin/StudentDashboard" class="text-decoration-none">
            <div class="card card-hover text-center h-100 shadow-sm p-3">
                <i class="fas fa-child fa-2x text-info mb-2"></i>
                <div class="fw-semibold">Thông tin học sinh</div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a href="/Schedule/Index" class="text-decoration-none">
            <div class="card card-hover text-center h-100 shadow-sm p-3">
                <i class="fas fa-calendar-alt fa-2x text-secondary mb-2"></i>
                <div class="fw-semibold">Kế hoạch giảng dạy</div>
            </div>
        </a>
    </div>
</div>

<!-- Nút góp ý nổi -->
<a href="/Feedback" class="btn btn-warning position-fixed rounded-circle shadow"
   style="bottom: 30px; right: 30px; z-index: 999; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
    <i class="fas fa-comment-dots fa-lg"></i>
</a>

<!-- CSS hover animation -->
<style>
    .card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }
</style>
