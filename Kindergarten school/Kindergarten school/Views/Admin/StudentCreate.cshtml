@using System.Security.Claims
@model Kindergarten_school.Models.StudentModel

@{
    ViewData["Title"] = "Thêm học sinh";
}

@{
    var userRole = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
    string cancelUrl = "";

    if (userRole == "admin")
    {
        cancelUrl = Url.Action("AdminDashboard", "Admin");
    }
    else if (userRole == "teacher")
    {
        cancelUrl = Url.Action("Index", "Home");
    }
}


<div class="container">
    <div class="card">
        <div class="card-header text-center">
            <h2>📌 Thêm Học Sinh</h2>
        </div>
        <div class="card-body">
            <form asp-action="StudentCreate" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="StudentID" class="control-label">Mã học sinh</label>
                            <input asp-for="StudentID" class="form-control" />
                            <span asp-validation-for="StudentID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label">Họ</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label">Tên</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Age" class="control-label">Tuổi</label>
                            <input asp-for="Age" type="number" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="control-label">Ngày sinh</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label">Giới tính</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="">Chọn giới tính</option>
                                <option value="Male">Nam</option>
                                <option value="Female">Nữ</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ParentID" class="control-label">Mã phụ huynh</label>
                            <input asp-for="ParentID" class="form-control" />
                            <span asp-validation-for="ParentID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherID" class="control-label">Mã giáo viên</label>
                            <input asp-for="TeacherID" class="form-control" />
                            <span asp-validation-for="TeacherID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ParentContact" class="control-label">Số Điện Thoại Phụ Huynh</label>
                            <input asp-for="ParentContact" class="form-control" />
                            <span asp-validation-for="ParentContact" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ClassID" class="control-label">Lớp</label>
                            <input asp-for="ClassID" class="form-control" />
                            <span asp-validation-for="ClassID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EnrollmentDate" class="control-label">Ngày nhập học</label>
                            <input asp-for="EnrollmentDate" type="date" class="form-control" />
                            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HealthStatus" class="control-label">Tình trạng sức khỏe</label>
                            <textarea asp-for="HealthStatus" class="form-control"></textarea>
                            <span asp-validation-for="HealthStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-save">💾 Lưu</button>
                    <a class="btn btn-cancel" href="@cancelUrl">❌ Hủy</a>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    /* Tổng thể */
    body {
        background-color: #f5f7fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        max-width: 900px;
        margin: auto;
    }

    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .card-header {
        background: linear-gradient(135deg, #ff9a9e, #fad0c4);
        color: white;
        padding: 15px;
        border-radius: 10px 10px 0 0;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ddd;
        padding: 10px;
        font-size: 16px;
    }

    .text-danger {
        font-size: 14px;
    }

    /* Nút */
    .btn-save {
        background: linear-gradient(135deg, #42e695, #3bb2b8);
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-save:hover {
            transform: scale(1.05);
            background: linear-gradient(135deg, #3bb2b8, #42e695);
        }

    .btn-cancel {
        background: linear-gradient(135deg, #ff758c, #ff7eb3);
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
    }

        .btn-cancel:hover {
            transform: scale(1.05);
            background: linear-gradient(135deg, #ff7eb3, #ff758c);
        }
</style>
