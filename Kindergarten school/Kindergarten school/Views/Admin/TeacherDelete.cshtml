@model Kindergarten_school.Models.TeacherModel

<div class="container mt-5 p-4 rounded bg-white shadow-sm">
    <h2 class="text-danger text-center mb-4 fw-bold">
        <i class="bi bi-trash-fill"></i> Xóa giáo viên
    </h2>

    <p class="text-center fs-5 text-muted mb-4">
        Bạn có chắc chắn muốn xóa thông tin giáo viên này không?
    </p>

    <div class="bg-light p-4 rounded mb-4">
        <h4 class="text-center mb-3">@Model.FirstName @Model.LastName</h4>
        <p><strong>📚 Môn học:</strong> @Model.Subject</p>
        <p><strong>📞 Số điện thoại:</strong> @Model.Phone</p>
        <p><strong>📅 Ngày vào làm:</strong> @Model.HireDate</p>
        <p><strong>📍 Địa chỉ:</strong> @Model.Address</p>
    </div>

    <form asp-action="TeacherDeleteConfirmed" asp-route-id="@Model.Id" method="post" class="text-center">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger px-5 py-2 rounded-pill fw-bold me-3">
            🗑️ Xóa
        </button>
        <a asp-action="TeacherDashboard" class="btn btn-secondary px-5 py-2 rounded-pill fw-bold">
            ❌ Hủy
        </a>
    </form>
</div>

<!-- Link Bootstrap icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
