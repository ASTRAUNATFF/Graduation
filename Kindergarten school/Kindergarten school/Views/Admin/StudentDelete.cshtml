@model Kindergarten_school.Models.StudentModel

@{
    ViewData["Title"] = "Xóa học sinh";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>Bạn có chắc chắn muốn xóa học sinh này không?</h3>
    <dl class="row">
        <dt class="col-sm-2">Họ</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Tuổi</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Lớp</dt>
        <dd class="col-sm-10">@Model.ClassID</dd>
    </dl>
</div>

<form asp-action="StudentDeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
