@model Kindergarten_school.Models.TeacherModel

@{
    ViewData["Title"] = "Thông tin chi tiết giáo viên";
}

<div class="container py-5">
    <div class="card shadow-sm rounded-4 p-5">
        <div class="text-center mb-4">
            <h2 class="text-danger fw-bold">
                <i class="bi bi-person-badge-fill"></i> Thông tin chi tiết giáo viên
            </h2>
        </div>

        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <strong>👨‍🏫 Họ tên:</strong> @Model.FirstName @Model.LastName
                    </div>
                    <div class="list-group-item">
                        <strong>📚 Môn học:</strong> @Model.Subject
                    </div>
                    <div class="list-group-item">
                        <strong>📞 Số điện thoại:</strong> @Model.Phone
                    </div>
                    <div class="list-group-item">
                        <strong>📅 Ngày vào làm:</strong> @Model.HireDate
                    </div>
                    <div class="list-group-item">
                        <strong>📍 Địa chỉ:</strong> @Model.Address
                    </div>
                    <div class="list-group-item">
                        <strong>🆔 Mã giáo viên:</strong> @Model.TeacherID
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <a asp-action="TeacherDashboard" class="btn btn-success btn-lg px-5 rounded-pill">
                🔙 Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
