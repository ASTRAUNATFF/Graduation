        transition: color 0.3s ease;
    }

        .nav-link:hover {
            color: #007bff; /* Màu khi hover */
        }
    /* Footer Container */
    .footer-container {
        background-color: #343a40;
        color: #f8f9fa;
        padding: 40px 20px;
        font-family: Arial, sans-serif;
    }

    .footer-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 20px;
        border-bottom: 1px solid #495057;
        padding-bottom: 20px;
    }

    .footer-col {
        flex: 1;
        margin: 0 15px;
        min-width: 250px;
    }

        .footer-col h3 {
            font-size: 20px;
            margin-bottom: 15px;
            color: #ffc107;
            text-transform: uppercase;
        }

        .footer-col p {
            line-height: 1.6;
            font-size: 14px;
        }

    .contact-list li {
        list-style: none;
        margin-bottom: 8px;
        font-size: 14px;
    }

    /* Subscribe Form */
    .subscribe-form {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 15px;
    }

        .subscribe-form input {
            padding: 10px;
            border: none;
            border-radius: 5px;
            flex: 1;
            font-size: 14px;
        }

        .subscribe-form button {
            padding: 10px 20px;
            background-color: #ffc107;
            color: #343a40;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .subscribe-form button:hover {
                background-color: #e0a800;
            }

    /* Social Icons */
    .social-icons {
        display: flex;
        margin-top: 15px;
        gap: 10px;
    }

        .social-icons li {
            list-style: none;
        }

        .social-icons a {
            text-decoration: none;
            color: #ffc107;
            font-size: 20px;
            transition: color 0.3s ease;
        }

            .social-icons a:hover {
                color: #e0a800;
            }

    /* Footer Bottom Row */
    .footer-row:last-child {
        border: none;
        padding-top: 20px;
        text-align: center;
    }

    .footer-row h4 {
        font-size: 16px;
        color: #ffc107;
        margin-bottom: 10px;
    }

 </style>
