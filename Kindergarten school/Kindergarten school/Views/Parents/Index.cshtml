@model Kindergarten_school.Models.Parent

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        .main-card {
            max-width: 700px;
            margin: 3rem auto;
            padding: 2rem;
            background: #fff;
            border-radius: 24px;
            box-shadow: 0 10px 30px rgba(255, 111, 71, 0.15);
            font-family: 'Segoe UI', sans-serif;
            text-align: center;
            position: relative;
        }

            .main-card::before {
                content: '';
                position: absolute;
                top: -10px;
                left: -10px;
                right: -10px;
                bottom: -10px;
                background: linear-gradient(to right, #ff9966, #ff5e62);
                z-index: -1;
                border-radius: 32px;
                filter: blur(25px);
            }

        .profile-header {
            display: inline-block;
            padding: 0.6rem 1.5rem;
            background-color: #ff6f47;
            color: white;
            font-size: 1.3rem;
            font-weight: bold;
            border-radius: 14px;
            margin-bottom: 1.5rem;
            box-shadow: 0 5px 10px rgba(255, 111, 71, 0.2);
        }

        .avatar {
            width: 100px;
            height: 100px;
            margin: 0 auto 1rem;
            border-radius: 50%;
            background: url('/images/avatar-default.png') center/cover no-repeat;
            box-shadow: 0 0 0 4px #ff9a8b4f;
        }

        .info-section h2 {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
        }

        .info-detail {
            font-size: 1rem;
            margin: 0.4rem 0;
            color: #666;
        }

            .info-detail i {
                color: #ff6f47;
                margin-right: 8px;
            }

        .buttons-card {
            margin-top: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }

            .buttons-card a {
                padding: 0.8rem 1.5rem;
                border-radius: 12px;
                background: linear-gradient(90deg, #ff8a00, #e52e71);
                color: white;
                font-weight: bold;
                text-decoration: none;
                width: 80%;
                max-width: 300px;
                box-shadow: 0 5px 15px rgba(229, 46, 113, 0.3);
                transition: transform 0.2s ease, box-shadow 0.2s ease;
            }

                .buttons-card a:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 8px 20px rgba(229, 46, 113, 0.4);
                }

        .avatar-wrapper {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .avatar-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #ff6f47;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }


        {
            width: 100%;
        }

        
    </style>
}

<section class="main-card">
    <div class="profile-header">Thông Tin Phụ Huynh</div>

    <div class="avatar-wrapper">
        <img src="~/images/Avatar.png" alt="Avatar" class="avatar-img" />
    </div>


    <div class="info-section">
        <h2>@Model.FirstName @Model.LastName</h2>
        <div class="info-detail"><i class="fa fa-phone"></i>@Model.Phone</div>
        <div class="info-detail"><i class="fa fa-envelope"></i>@Model.Email</div>
    </div>

    <div class="buttons-card">
        <a href="/profile/list-student">👶 Danh sách con</a>
        <a href="/parent/notifications/@Model.ParentID">📢 Thông báo</a>
        <a href="/parent/health-report/@Model.ParentID">🩺 Báo cáo sức khỏe</a>
        <a href="/parent/chat/@Model.ParentID">💬 Chat</a>
    </div>
</section>
