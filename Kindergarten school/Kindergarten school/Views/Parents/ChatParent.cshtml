@model List<Kindergarten_school.Models.TeacherModel>
@using System.Security.Claims

@{
    ViewData["Title"] = "Chat với giáo viên";
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

@section Styles {
    <style>
        .container-fluid {
            display: flex;
            gap: 20px;
            justify-content: center;
            padding: 20px;
            flex-wrap: wrap;
        }

        .user-list {
            width: 280px;
            background: linear-gradient(135deg, #ff7e5f, #feb47b);
            border-radius: 10px;
            color: white;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            flex-shrink: 0;
        }

        .nav-user {
            padding: 10px;
            margin: 5px 0;
            cursor: pointer;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 6px;
            transition: background-color 0.3s;
        }

            .nav-user:hover {
                background: rgba(255, 255, 255, 0.2);
            }

        .chatroom {
            flex: 1;
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            min-width: 400px;
        }

        .message-channel {
            height: 400px;
            overflow-y: auto;
            padding: 10px;
            margin-bottom: 10px;
        }

        .text-input-wrapper {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .text-input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        #sendMessage {
            background: linear-gradient(135deg, #ff7e5f, #feb47b);
            border: none;
            padding: 12px;
            border-radius: 50%;
            color: white;
            transition: background-color 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            #sendMessage:hover {
                background: linear-gradient(135deg, #feb47b, #ff7e5f);
            }

        .pfp-small {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .send-text {
            margin-left: 5px;
            font-weight: bold;
        }

        .back-button {
            margin-top: 12px;
            padding: 8px 16px;
            background-color: #ff7e5f;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .back-button:hover {
                background-color: #feb47b;
            }
    </style>
}
<button class="back-button" onclick="location.href='https://localhost:7147/profile'">Quay lại</button>


<div class="container-fluid" id="chatParent">
    <input type="hidden" id="ParentId" value="@userId" />

    <div class="user-list">
        @if (Model != null)
        {
            foreach (var teacher in Model)
            {
                <div class="nav-user" data-teacherid="@teacher.AccountID">
                    <div class="nav-user-wrapper">
                        <img class="pfp-small" src="~/images/8065351.png">
                        <p>@teacher.FirstName @teacher.LastName</p>
                    </div>
                </div>
            }
        }
    </div>
    <div class="chatroom">
        <div class="message-channel" id="messageChannel"></div>
        <div class="text-input-wrapper" id="bottomSend" style="display: none">
            <textarea class="text-input" rows="3" placeholder="Say something..." id="messageInput"></textarea>
            <div id="sendMessage" style="cursor: pointer">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path d="M16.1 260.2c-22.6 12.9-20.5 47.3 3.6 57.3L160 376l0 103.3c0 18.1 14.6 32.7 32.7 32.7c9.7 0 18.9-4.3 25.1-11.8l62-74.3 123.9 51.6c18.9 7.9 40.8-4.5 43.9-24.7l64-416c1.9-12.1-3.4-24.3-13.5-31.2s-23.3-7.5-34-1.4l-448 256z" />
                </svg>
                <span class="send-text">Gửi</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/parent-js/chat.js"></script>
}
