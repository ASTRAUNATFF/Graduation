@model IEnumerable<Kindergarten_school.Models.StudentModel>

@{
    ViewData["Title"] = "Sổ liên lạc";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<div class="min-h-screen bg-gradient-to-b from-[#fff0f6] to-white py-10 px-4">
    <div class="max-w-5xl mx-auto bg-white rounded-3xl shadow-xl p-6">
        <h1 class="text-3xl font-extrabold text-center text-pink-600 mb-6 tracking-wide">📘 Sổ liên lạc</h1>

        <a href="https://localhost:7147/profile"
           class="inline-flex items-center text-sm bg-pink-100 hover:bg-pink-200 text-pink-700 font-medium px-4 py-2 rounded-full mb-4 shadow transition">
            <i class="fas fa-arrow-left mr-2"></i> Trở về
        </a>

        <div class="overflow-x-auto rounded-xl">
            <table class="min-w-full bg-white text-gray-700 text-sm rounded-xl shadow-sm">
                <thead class="bg-pink-300 text-white">
                    <tr>
                        <th class="py-3 px-4 text-left"><i class="fas fa-user mr-1"></i>Họ</th>
                        <th class="py-3 px-4 text-left"><i class="fas fa-baby mr-1"></i>Tên</th>
                        <th class="py-3 px-4 text-left"><i class="fas fa-birthday-cake mr-1"></i>Tuổi</th>
                        <th class="py-3 px-4 text-left"><i class="fas fa-school mr-1"></i>Lớp</th>
                        <th class="py-3 px-4 text-left"><i class="fas fa-map-marker-alt mr-1"></i>Địa chỉ</th>
                        <th class="py-3 px-4 text-left"><i class="fas fa-heartbeat mr-1"></i>Sức khỏe</th>
                        <th class="py-3 px-4 text-left"><i class="fas fa-cogs mr-1"></i>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr class="border-b hover:bg-pink-50 transition">
                            <td class="px-4 py-3">@student.FirstName</td>
                            <td class="px-4 py-3">@student.LastName</td>
                            <td class="px-4 py-3">@student.Age</td>
                            <td class="px-4 py-3">@student.ClassID</td>
                            <td class="px-4 py-3">@student.Address</td>
                            <td class="px-4 py-3">@student.HealthStatus</td>
                            <td class="px-4 py-3 space-x-1 space-y-1">
                                <a class="inline-flex items-center bg-blue-400 hover:bg-blue-500 text-white px-3 py-1 rounded-full text-xs font-medium"
                                   href="/profile/attendances/@student.StudentID">
                                    <i class="fas fa-user-check mr-1"></i>Điểm danh
                                </a>
                                <a class="inline-flex items-center bg-purple-500 hover:bg-purple-600 text-white px-3 py-1 rounded-full text-xs font-medium"
                                   href="/profile/learning-progress/@student.StudentID">
                                    <i class="fas fa-chart-line mr-1"></i>Tiến độ
                                </a>
                                <a class="inline-flex items-center bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1 rounded-full text-xs font-medium"
                                   href="/profile/fees/@student.StudentID">
                                    <i class="fas fa-coins mr-1"></i>Học phí
                                </a>
                                <a class="inline-flex items-center bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded-full text-xs font-medium"
                                   href="/profile/behavior/@student.StudentID">
                                    <i class="fas fa-clipboard-list mr-1"></i>Phiếu
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>